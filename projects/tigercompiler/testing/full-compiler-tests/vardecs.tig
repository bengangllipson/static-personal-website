let
	var a := 42
	var b := a
	var c := a * 10 + 8
	function printint(i: int) =
      let function f(i:int) = if i>0 
    	     then (f(i/10); print(chr(i-i/10*10+ord("0"))))
       in if i<0 then (print("-"); f(-i))
          else if i>0 then f(i)
          else print("0")
      end
in
	printint(a); print("\n");
	printint(b); print("\n");
	b := 7;
	printint(a); print("\n");
	printint(b); print("\n");
	printint(c)
end